    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch without args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/main.go",
            "env": {
            },
            "args": []
        },
        {
            "name": "Fill",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/main.go",
            "env": {                
            },
            "args": [
                "-c",
                "${workspaceFolder}/config.json",
                "fill",
                "--stop-on-error"
            ]
        },
        {
            "name": "Watch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/main.go",
            "env": {                
            },
            "args": [
                "-c",
                "${workspaceFolder}/config.json",
                "watch",
                "--period=10"
            ]
        }
    ]
}